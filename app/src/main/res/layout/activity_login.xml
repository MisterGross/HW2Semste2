<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context="com.tnc.crackertracker.UI.LoginActivity">


    <ImageView
        android:id="@+id/logo"
        android:src="@drawable/applogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/email_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:text="User Email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/user_email"
        android:fontFamily="@font/studlyregular"
        android:padding="10dp"
        android:layout_marginStart="15dp"
      />

    <EditText
        android:id="@+id/user_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/imageview_background"
        android:layout_marginHorizontal="20dp"
        android:padding="10dp"
        />

    <TextView
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:text="password"
        android:fontFamily="@font/studlyregular"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/user_email"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="15dp"/>

    <EditText
        android:id="@+id/user_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@+id/password"
        android:background="@drawable/imageview_background"
        android:layout_marginHorizontal="20dp"
        android:padding="10dp"
        />

    <Button
        android:id="@+id/login_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/user_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="25dp"
        android:text="Login"
        android:textSize="20dp"
        android:fontFamily="@font/studlyregular"
        android:textColor="@color/white"
        android:background="@drawable/submit_button_style"/>

    <TextView
        android:id="@+id/signup_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_button"
        android:text="or signup here"
        android:fontFamily="@font/studlyregular"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:padding="10dp"
        android:textColor="@color/blue_theme_color"
        />
</androidx.constraintlayout.widget.ConstraintLayout>